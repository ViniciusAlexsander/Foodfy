{% extends "admin/layout.njk" %}

{% block content %}
  <div class="recipesContent">
    <div class="cardCabecalho">
      <h2>Gerenciar receitas</h2>
      <div class="buttons">
        <a class="salvar" href="/admin/recipes/create">Criar Receita</a>
      </div>
    </div>
    <div class="recipes">
      {% for recipe in recipes %}
        <div class="recipe">
          <div class="card" id="{{recipe.id}}">
            <img src="{{recipe.image}}"/>
            <div class="cardInfo">
              <p class="title">{{recipe.title}}</p>
              <p class="autor">por
                {{recipe.author}}</p>
              <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock content %}