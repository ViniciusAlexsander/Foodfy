{% extends "admin/layout.njk" %}

{% block content %}
  <div class="chefsContent">
    <div class="cardCabecalho">
      <h2>Gerenciar Chefs</h2>
      <div class="buttons">
        <a href="/admin/chefs/create" class="salvar">Criar Chef</a>
      </div>
    </div>
    <div class="chefs">
      {% for chef in chefs %}
        <div class="chef">
          <div class="avatar">
            <img src="{{chef.avatar_url}}" alt="Foto do chef">
          </div>
          <div class="name">
            <p>{{chef.name}}</p>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock content %}