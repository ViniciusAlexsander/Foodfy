{% extends "admin/layout.njk" %}
{% block head %}
  <title>Foodfy -
    {{chef.name}}</title>
{% endblock head %}

{% block content %}
  <div class="chef">
    <div class="cardCabecalho">
      <h2>Chef:
        {{chef.name}}</h2>
      <div class="buttons">
        <a class="salvar" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
      </div>
    </div>
    <div class="perfil">
      <img src="{{chef.avatar_url}}"/>
      <h2>{{chef.name}}</h2>
      {# <p>{{qntRecipes}} receitas</p> #}
    </div>
  </div>
  <div class="recipesContent">
    <h2>Receitas</h2>
    <div class="recipes">
      {% for recipe in recipes %}
        <div class="recipe">
          <div class="card" id="{{recipe.id}}">
            <img src="{{recipe.image}}"/>
            <div class="cardInfo">
              <p class="title">{{recipe.title}}</p>
              <p class="autor">por
                {{chef.name}}</p>
              <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock content %}